<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:orientation="horizontal"
            android:weightSum="10">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:layout_margin="10dp"
                android:src="@drawable/baseline_arrow_back_24"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>
        <ImageView
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="0dp"
            android:src="@drawable/placeholder"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SONG NAME GOES HERE PLACEHOLDER"
            android:layout_marginHorizontal="20dp"
            android:textAlignment="center"
            android:textSize="30sp"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <SeekBar
                android:id="@+id/seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/black"
                android:foregroundTint="@color/red"
                android:progressTint="@color/red"
                android:thumbTint="@color/red" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/currentTime"
                android:layout_below="@id/seek_bar"
                android:layout_alignParentStart="true"
                android:textColor="@color/red"
                android:text="@string/zero"
                android:textSize="20sp"
                android:layout_marginStart="24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/totalTime"
                android:layout_below="@id/seek_bar"
                android:text="@string/zero"
                android:textSize="20sp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="24dp"
                android:textColor="@color/red"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="10"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10"
                android:layout_marginHorizontal="10dp"
                >
            <ImageView
                android:id="@+id/btn_repeat"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="@color/transparent"
                android:contentDescription="Repeat button"
                android:src="@drawable/repeat"
                app:tint="@color/red"
                android:clickable="true"
                android:focusable="true"
                />
        </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10"
                android:layout_marginHorizontal="10dp"
                >

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:background="@color/transparent"
                android:contentDescription="Skip back button"
                android:src="@drawable/skip_previous_24dp"
                app:tint="@color/red"
                android:clickable="true"
                android:focusable="true"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10"
                android:layout_marginHorizontal="10dp"
                >

            <ImageView
                android:id="@+id/btn_play_pause"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:background="@color/transparent"
                android:contentDescription="Play button"
                android:src="@drawable/play_arrow_24dp"
                app:tint="@color/red"
                android:clickable="true"
                android:focusable="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10"
                android:layout_marginHorizontal="10dp"
                >
            <ImageView
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:background="@color/transparent"
                android:contentDescription="Skip forward button"
                android:src="@drawable/skip_next_24dp"
                app:tint="@color/red"
                android:clickable="true"
                android:focusable="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="10"
                android:layout_marginHorizontal="10dp"
                >
            <ImageView
                android:id="@+id/btn_shuffle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="@color/transparent"
                android:contentDescription="Shuffle button"
                android:src="@drawable/shuffle"
                app:tint="@color/red"
                android:clickable="true"
                android:focusable="true"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>