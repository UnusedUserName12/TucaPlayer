<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corners10dp"
    android:backgroundTint="@color/blue">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <RelativeLayout
            android:id="@+id/btn_insert_image_change_dialog"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/corners25dp"
            android:backgroundTint="@color/black40"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/plus_icon_change_dialog"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/plus"
                app:tint="@color/red" />
            <ImageView
                android:id="@+id/chosenImage_change_dialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:tag="bg1">
            </ImageView>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_change_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_insert_image_change_dialog"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:text="CHANGE IMAGE"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-black"
            android:background="@drawable/corners10dp"
            android:backgroundTint="@color/red"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>