<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/playlist_image"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/placeholder"
            android:background="@drawable/corners25dp"
            />

        <TextView
            android:id="@+id/playlist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playlist_image"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:text="PLACEHOLDER"
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"/>
        <ImageButton
            android:id="@+id/btn_add_song_to_playlist"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/plus"
            app:tint="@color/grey_72"
            android:backgroundTint="@color/transparent"
            android:layout_below="@+id/playlist_name"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="40dp"
            android:layout_toLeftOf="@+id/btn_more_playlist"
         />
        <ImageButton
            android:id="@+id/btn_more_playlist"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_more_vert_24"
            android:background="@color/transparent"
            app:tint="@color/grey_72"
            android:layout_below="@+id/playlist_name"
            android:layout_alignParentEnd="true"/>

        <ListView
            android:id="@+id/AudioList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btn_add_song_to_playlist"
            app:layout_constraintVertical_bias="0.0" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>