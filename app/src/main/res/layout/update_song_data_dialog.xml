<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <TextView
            android:id="@+id/update_song_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Song"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/grey_72"/>
        <EditText
            android:id="@+id/change_song_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:hint="Name"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/grey_72"
            android:layout_below="@+id/update_song_header"/>
        <EditText
            android:id="@+id/change_song_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:hint="Artist"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/grey_72"
            android:layout_below="@+id/change_song_name"/>
        <EditText
            android:id="@+id/change_song_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:hint="Album"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/grey_72"
            android:layout_below="@+id/change_song_artist"/>
        <EditText
            android:id="@+id/change_song_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:hint="Genre"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/grey_72"
            android:layout_below="@+id/change_song_album"/>
        <Button
            android:id="@+id/btn_rename_playlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/change_song_genre"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:text="UPDATE"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-black"
            android:background="@drawable/corners10dp"
            android:backgroundTint="@color/red"
            />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>